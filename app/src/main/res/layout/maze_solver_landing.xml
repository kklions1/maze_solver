<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/landing_title"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="25dp"/>

    <Button
        android:id="@+id/button_solve_breath_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/solve_breadth_first"/>

    <Button
        android:id="@+id/button_solve_depth_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/solve_depth_first"/>


    <Button
        android:id="@+id/button_solve_a_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/solve_a_star"/>


    <Button
        android:id="@+id/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/maze_options"/>


</LinearLayout>