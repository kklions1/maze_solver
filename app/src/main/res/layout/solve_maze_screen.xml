<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragment is added statically here since later i plan to
         add some controls to the maze -->
    <fragment
        android:id="@+id/maze_display_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        class="kklions.mazesolver.fragments.MazeDisplayFragment"
        android:layout_weight="4"/>

    <!-- layout where the view controls for the solver go -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/play_solver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Play"/>


        <Button
            android:id="@+id/pause_solver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pause"/>


        <Button
            android:id="@+id/step_solver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Step"/>

    </LinearLayout>
</LinearLayout>